<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.simpleman.payture.bitcoinwallet.UI.UIActivities.Main.MainActivity"
    tools:showIn="@layout/app_bar_main">


        <FrameLayout
            android:id="@+id/main_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@color/frameBackground"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/loading_progress_bar"
            >
        </FrameLayout>

        <ProgressBar
            android:id="@+id/loading_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:progress="0"
            android:layout_height="5dp"
            android:layout_above="@+id/btc_price_frame"/>

        <FrameLayout
            android:id="@+id/btc_price_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/frameBackground">
        </FrameLayout>


</RelativeLayout>
