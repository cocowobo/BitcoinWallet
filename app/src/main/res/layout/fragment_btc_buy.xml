<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/btc_buy_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Покупка"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/btc_buy_amount"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="12"
        android:text="12345.6789000"
        android:textSize="30dp"
        android:inputType="numberDecimal"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btc_buy_header"
        app:layout_constraintRight_toLeftOf="@+id/btc_buy_currency_spinner"
        android:layout_marginRight="8dp" />

    <Spinner
        android:id="@+id/btc_buy_currency_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btc_buy_amount"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/btc_buy_cost_block_placeholder"
        android:layout_width="344dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btc_buy_amount"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.0">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/payture_logo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/btc_buy_cost_block"
        android:layout_width="344dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btc_buy_amount"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimary"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.0">


        <TextView
            android:id="@+id/btc_buy_cost_header"
            android:layout_width="328dp"
            android:textColor="@color/frameBackground"
            android:layout_height="wrap_content"
            android:text="Стоимость"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/btc_buy_cost"
            android:textColor="@color/frameBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1111111111111111"
            android:ems="8"
            android:textSize="25dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btc_buy_cost_header"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/btc_buy_cost_currency_label"
            android:textColor="@color/frameBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="USD"
            app:layout_constraintBaseline_toBaselineOf="@+id/btc_buy_cost"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/btc_buy_cost"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/btc_buy_button"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/frameBackground"
        android:text="Купить"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />


</android.support.constraint.ConstraintLayout>