<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/btc_price_usd_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USD"
        app:layout_constraintBaseline_toBaselineOf="@+id/btc_price_usd"
        app:layout_constraintLeft_toRightOf="@+id/btc_price_usd"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/btc_price_usd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4567.89"
        app:layout_constraintLeft_toRightOf="@+id/btc_price_label"
        android:layout_marginLeft="30dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btc_price_label" />

    <TextView
        android:id="@+id/btc_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 BTC = "
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btc_price_header"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/btc_price_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Текущий курс"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/btc_price_rub_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUB"
        app:layout_constraintLeft_toRightOf="@+id/btc_price_rub"
        android:layout_marginLeft="10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btc_price_rub" />

    <TextView
        android:id="@+id/btc_price_rub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="234567.89"
        app:layout_constraintLeft_toRightOf="@+id/btc_price_usd_label"
        android:layout_marginLeft="50dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btc_price_usd_label" />

    <ImageButton
        android:id="@+id/update_btc_price_info_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/frameBackground"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/update_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>